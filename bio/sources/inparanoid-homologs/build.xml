<project name="inparanoid-homologs" default="default" basedir=".">
  <description>build, test, package inparanoid-homologs</description>
  
  <import file="../../../imbuild/source.xml"/>

  <!-- no retrieve -->
  <target name="retrieve"/>

  <target name="-init-loader-classname" unless="inparanoid-homologs.loaderClassName">
    <!-- set the default -->
    <property name="inparanoid-homologs.loaderClassName"
              value="org.intermine.bio.dataconversion.InparanoidHomologsDirectDataLoaderTask"/>
  </target>

  <!-- NOTE: we can do this with dynamic properties -->
  <target name="load" depends="-init-loader-classname, init, -init-deps">
    <taskdef name="read-inparanoid-homologs"
      classname="${inparanoid-homologs.loaderClassName}"
      classpathref="task.class.path"/>
    <read-inparanoid-homologs integrationWriterAlias="integration.production"
                sourceName="${source.name}"
                sourceType="${source.type}">
      <fileset dir="${src.data.dir}" includes="${src.data.dir.includes}"/>
    </read-inparanoid-homologs>
  </target>

</project>
